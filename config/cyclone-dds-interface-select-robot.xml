<CycloneDDS>
    <Domain>
        <General>
            <!-- ethernet interface of robot -->
            <Interfaces>
                <NetworkInterface name="eth0" />
            </Interfaces>
            <AllowMulticast>false</AllowMulticast>
        </General>
        <Discovery>
          <ParticipantIndex>auto</ParticipantIndex>
          <MaxAutoParticipantIndex>100</MaxAutoParticipantIndex>
          <Peers>
            <!-- localhost  -->
            <Peer address="127.0.0.1"/>
            <!-- mini-pc via ethernet  -->
            <Peer address="192.168.186.3"/>
          </Peers>
        </Discovery>
    </Domain>
</CycloneDDS>
